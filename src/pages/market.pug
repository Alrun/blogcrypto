extends ../pug/layouts/default

block page-vars
    -
        var meta = {
            title: 'Курс криптовалют – ' + PROJECT_NAME,
            description: 'TT',
            keywords: '',
            type: 'website',
            url: '',
            image: '/public/images/test.jpg'
        }
        var currentUrl = 'market'

block main
    .container
        section.mb-4
            h1.mb-4.mt-5.display-6 Курс криптовалют

            .row.align-items-end
                .col-sm.col-md-4.col-lg-3.col-xxl-2.mb-4
                    .row
                        .col-6.mb-2.mb-sm-0
                            label(for="inputCurrency") Валюта
                            .select
                                select#inputCurrency.form-control.js-market-currency
                                    option(value="usd", data-dec="2", data-symbol="$", data-symbol-start, selected) USD
                                    option(value="eur", data-dec="2", data-symbol="€", data-symbol-start) EUR
                                    option(value="rub", data-dec="2", data-symbol="₽") RUB
                                    option(value="uah", data-dec="2", data-symbol="₴") UAH
                                    option(value="btc", data-symbol="₿") BTC
                                    option(value="eth", data-symbol="Ξ") ETH

                        .col-6.mb-2.mb-sm-0
                            label(for="inputPerPage") Показать
                            .select
                                select#inputPerPage.form-control.js-market-per-page
                                    option(value="20") 20
                                    option(value="50", selected) 50
                                    option(value="100") 100

                .col-sm-auto.col-md-8.col-lg-9.col-xxl-10.mb-2
                    //-nav(aria-label="...")
                        ul.pagination.justify-content-sm-end
                            li.page-item
                                a.page-link(href="#") 1
                            li.page-item.disabled
                                span.page-link ...
                            li.page-item.d-none.d-md-block
                                a.page-link(href="#") 21
                            li.page-item
                                a.page-link(href="#") 22
                            li.page-item.active(aria-current="page")
                                span.page-link  23
                                span.sr-only (current)
                            li.page-item
                                a.page-link(href="#") 24
                            li.page-item.d-none.d-md-block
                                a.page-link(href="#") 25
                            li.page-item.disabled
                                span.page-link ...
                            li.page-item
                                a.page-link(href="#") 59

                    nav(aria-label="...")
                        ul.pagination.justify-content-sm-end
                            li.page-item.active(aria-current="page")
                                span.page-link  1
                                span.sr-only (current)
                            li.page-item.d-none.d-md-block
                                a.page-link(href="#") 2
                            li.page-item
                                a.page-link(href="#") 3
                            li.page-item
                                a.page-link(href="#") 4
                            li.page-item.d-none.d-md-block
                                a.page-link(href="#") 5
                            li.page-item.disabled
                                span.page-link ...
                            li.page-item
                                a.page-link(href="#") 59

            .market.table-nowrap.table-responsive-xl.js-market

            nav.mt-4(aria-label="...")
                ul.pagination.justify-content-sm-end
                    li.page-item.active(aria-current="page")
                        span.page-link  1
                        span.sr-only (current)
                    li.page-item.d-none.d-md-block
                        a.page-link(href="#") 2
                    li.page-item
                        a.page-link(href="#") 3
                    li.page-item
                        a.page-link(href="#") 4
                    li.page-item.d-none.d-md-block
                        a.page-link(href="#") 5
                    li.page-item.disabled
                        span.page-link ...
                    li.page-item
                        a.page-link(href="#") 59
